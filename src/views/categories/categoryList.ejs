<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head.ejs',{css: [ "type-category","footer", "header"]}) %> 

    </head>
       
  

<body>
    
    <%- include('../partials/header.ejs') %>
 
    <!--MAIN-->
    <main>
        
            <h2 class="tipos">Categorias de Productos</h2>
            <section class="listado-tipos">
                            
                <% for(i=0;i<categories.length;i++){ %>
                
                    <span id="list">
                        <p><%=categories[i].id%>: <%=categories[i].name%> </p>
                        <a href="/categories/edit/<%=categories[i].id %>" id="button-editar"> EDITAR </a>
                        <form action="/categories/delete/<%=categories[i].id %>?_method=DELETE" method="POST" enctype="multipart/form-data">
                            <button type="submit" id="button-eliminar">ELIMINAR</button>
                        </form> 
                    </span>
                <%}%> 

                    <section id="button-crear">
                        <button id="boton-crear"><a href="/categories/create/">AGREGAR UN TIPO</a></button>
                    </section>
             
                
            </section>


                
        
      </main> 
      <%- include('../partials/footer.ejs') %>

    
    </body>
    </html>