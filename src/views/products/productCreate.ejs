<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs',{css: [ "productCreateModify","footer", "header"]}) %> 
    <title>Product-create</title>
</head>
<body>
 
    <%- include('../partials/header.ejs') %>
   

<main id="formCreate">
    <div class="productCreateModify">

        <div class="titulo-create-modify">
            <h3>INGRESE UN NUEVO PRODUCTO</h3>
        </div>

        <form id="abmProduct" action="/products/" method="POST">
            <fieldset class=idProducto>
                <label for="idProducto"></label>
                <input type="number" name="id"  id="idProducto" > <!--identificador unico-->
            </fieldset>

            <fieldset class=nombreProducto>
                <label for="nombreProducto">Nombre del Producto:</label>
                <input type="text" name="name"  id="nombreProducto" placeholder="Nombre del producto" >
            </fieldset>

            <fieldset class="descripcionProducto">
                <label for="descripcionProducto">Descripcion del Producto: </label>
                <input type="text" name="description"  id="descripcionProducto" >
            </fieldset>

            <fieldset class="imagenProducto">
                <label for="imagenProducto">Imagen: </label>
                <input type="file" name="image"  id="imagenProducto" >
            </fieldset>

            <fieldset class="categoriaProducto">
                <label for="categoria">Categoria: </label>
                <input type="text" name="category"  id="categoria" >
            </fieldset>

            <fieldset class="precioProducto">
                <label for="precioProducto">Precio: </label>
                <input type="number" name="price"  id="precioProducto" >
            </fieldset>

        
            <fieldset class="buttons-form-cm">
                <button id="cancel-create" type="reset">Cancelar</button>
                <button id="accept-create" type="submit">Crear</button>
            </fieldset>
        </form>

    </div>
</main>
    <footer class="footer">
        <%- include('../partials/footer.ejs') %>
    </footer>
</body>
</html>