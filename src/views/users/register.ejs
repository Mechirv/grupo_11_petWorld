<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head.ejs',{css: [ "register","footer", "header"]}) %> 

<body id="register">
    
    <%- include('../partials/header.ejs') %>


<main>

    <h1 id="titulo">INGRESE SUS DATOS</h1>
    
    <div class="register-contenedor">
        <% if(locals && locals.errores){ %>
            <% for(let error in errores) { %>
                <p> <%=errores[error].msg %></p>
            <% } %>
        <% } %>
        <form id="register" action="/users/save" method="POST" enctype="multipart/form-data">
            
            <fieldset id="datos">
                <fieldset class="datos-acceso">

                    <legend>DATOS DE ACCESO</legend>
                    <fieldset class="datos">
                        <label class="label" for="usuario">Nombre de Usuario: </label>
                        <input type="text" name="usuario"  id="usuario" value="<%= locals.old && old.usuario ? old.usuario : '' %>">
                    </fieldset>

                    <fieldset class="datos">
                        <label class="label"for="email">Email: </label>
                        <input type="email" name="email"  id="email" placeholder="TuEmail@gmail.com" value="<%= locals.old && old.email ? old.email : '' %>">
                    </fieldset>

                    <fieldset class="datos">
                        <label class="label" for="pass">Contraseña: </label>
                        <input type="password" name="pass"  id="pass" placeholder="Min. 8 caracteres" >
                    </fieldset>

                    <fieldset class="datos">
                        <label class="label" for="confirm-pass">Confirmar Contraseña: </label>
                        <input type="password" name="confirm"  id="confirm-pass" placeholder="Repita su contraseña">
                    </fieldset>
                </fieldset>

                <fieldset class="info-personal">
                    <legend>INFORMACIÓN PERSONAL</legend>
                    <fieldset class="datos">
                        <label  class="label" for="nombre">Nombre</label>
                        <input type="text" name="nombre"  id="nombre">
                    </fieldset>

                    <fieldset class="datos">
                        <label class="label" for="apellido">Apellido</label>
                        <input type="text" name="apellido" id="apellido">
                    </fieldset>

                    <fieldset class="datos">
                        <label class="label" for="imagenUsuario">Imagen: </label>
                        <input type="file" name="image"  id="imagenUsuario">
                    </fieldset>
                </fieldset>
            </fieldset>

            <fieldset class="buttons">
                <button id="cancel" type="reset">Cancelar</button>
                <button id="button-register" type="submit">Registrarse</button>
            </fieldset>
        </form>

       

    </div>

</main>

<!--FOOTER-->    
<footer>
    <%- include('../partials/footer.ejs') %>
</footer>



</body>
</html>