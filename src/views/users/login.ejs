<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>
<body id="login">
    <section class="login-contenedor">
        <h1>Inicio de Sesión</h1>
    
        <form id="form-login" method="GET" action="/index">
            <fieldset class="usuario">
                <label for="usuario">Usuario</label>
                <input type="text" id="usuario" placeholder="Email o nombre de usuario" required/><br>
            </fieldset>

            <fieldset class="password">
                <label for="pass">Contraseña</label>
                <input type="password" id="pass" placeholder="Min. 8 caracteres" minlength="8" required/>
            </fieldset>

            <fieldset id="check">
                <input type="checkbox" id="checkbox"/> 
                <label for="checkbox">Recordarme</label>
            </fieldset>

            <fieldset id="button-login">
                <button id="button-login-id" type="submit" >Ingresar</button>
            </fieldset>

        </form>

        <section id="options">
            <div id="forgot-pass">
                <a href="/">Recuperar contraseña</a>
            </div> 

            <div id="create-account">
                No tienes cuenta?
                <a href="/register">
                <button type="button">Crear cuenta</button>
                </a>
            </div>

            <div id="volver-home"><a href="/">Volver al Home</a></div>
        </section>
    </section>
</body>
</html>